# SMSSA Backend - Environment Configuration Example
# Copy this file to .env and update the values

# Server Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
# For local development with Docker:
DATABASE_URL=postgres://smssa_db_user:smssa_secure_password_123@localhost:5432/smssa_db

# SSL setting (false for local Docker, true for remote/cloud databases)
DB_SSL=false

# Auto-run migrations on startup
AUTO_MIGRATE=true

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# AWS S3 Configuration (for document storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=

# Docker-specific settings
POSTGRES_PASSWORD=smssa_secure_password_123

# Email Notification Settings (SMTP)
SMTP_HOST=lnxwsd07.hostserv.co.za
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER=notification@mcmf.co.za
SMTP_PASSWORD=your_email_password
SMTP_FROM=SMSSA Notifications <notification@mcmf.co.za>
