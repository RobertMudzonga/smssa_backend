# .env
# Run backend HTTP server on a non-DB port for local development
PORT=3000

# ========== LOCAL DEVELOPMENT ==========
# Connect to local smssa_local database for development and testing
DB_HOST=localhost
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=smssa_local
DB_PORT=5432
DB_SSL=false

# LOCAL DATABASE URL (active for development)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/smssa_local

# ========== RENDER PRODUCTION (for reference) ==========
# Uncomment these and update DATABASE_URL to use Render when deploying
# RENDER_DB_HOST=dpg-d4uo0tqli9vc73d9sgg0-a.oregon-postgres.render.com
# RENDER_DB_PORT=5423
# RENDER_DB_NAME=smssa_db
# RENDER_DB_USERNAME=smssa_db_user
# RENDER_DB_PASSWORD=IWxNdtLPYMSJ3ZBNKa3f5xL1NC9eraKJ
# 
# PRODUCTION DATABASE URL (use this when deploying to Render):
# DATABASE_URL=postgresql://smssa_db_user:IWxNdtLPYMSJ3ZBNKa3f5xL1NC9eraKJ@dpg-d4uo0tqli9vc73d9sgg0-a.oregon-postgres.render.com:5423/smssa_db
# DB_SSL=true

# Example psql command for local development
PSQL_COMMAND=psql -h localhost -p 5432 -U postgres -d smssa_local

# Disable automatic migrations when developing locally to avoid network timeouts
AUTO_MIGRATE=true